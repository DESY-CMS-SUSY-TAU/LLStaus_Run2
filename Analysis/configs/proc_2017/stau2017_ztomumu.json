    "good_jet_id": "cut:tight",
    "good_jet_puId": "cut:tight",
    "good_jet_lepton_distance": 0.4,
    "good_jet_eta_min": -2.1,
    "good_jet_eta_max": 2.1,
    "good_jet_pt_min": 30,
    "btag": "deepjet:medium",
    "num_atleast_btagged": 0,

